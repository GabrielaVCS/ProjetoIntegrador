<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CadastrarUser"
    android:padding="20dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cadastrar usuário"
                tools:layout_editor_absoluteX="230dp"
                tools:layout_editor_absoluteY="135dp"
                android:textSize="25dp"
                android:layout_margin="10dp"/>

            <ImageView
                android:id="@+id/iwFotoCandidato"
                android:layout_width="196dp"
                android:layout_height="173dp"
                app:srcCompat="@android:drawable/ic_menu_camera" />

            <EditText
                android:id="@+id/edtLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Login" />

            <EditText
                android:id="@+id/edtCPF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:hint="CPF" />

            <EditText
                android:id="@+id/edtIdade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:hint="Idade" />

            <EditText
                android:id="@+id/edtSenha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPassword"
                android:hint="Senha"/>

            <EditText
                android:id="@+id/edtConfirmSenha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPassword"
                android:hint="Confirmar senha"/>

            <RadioGroup
                android:id="@+id/rgTipoUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:id="@+id/rdbtnAdministrador"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Administrador" />

                <RadioButton
                    android:id="@+id/rdbtnUsuarioComum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Usuário comum" />
            </RadioGroup>

            <Button
                android:id="@+id/btnCadastrar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cadastrar" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>